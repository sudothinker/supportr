<div class="block" id="block-lists">
  <div class="content">
    <h2 class="title">Unanswered Emails</h2>
    <div class="inner">
      <ul class="list">    
        <% @emails.each do |email| %>        
        <li>
          <div class="left">
            <% form_for email do |form| %>
              <%= form.hidden_field :event, :value => 'archive' %>
              <%= submit_tag "Ignore" %>
            <% end %>
            
            <% form_for email do |form| %>
              <%= form.select :response_id, Response.all.map {|m| [ m.name, m.id ] } %>              
              <%= form.hidden_field :event, :value => "reply" %>
              <%= submit_tag "Reply" %>
            <% end %>
          </div>
          <div class="item">                
            <p><%= display_email(email) %></p>
            
            <%= link_to_function("Reply", "$('#email_#{email.id}').toggle()") %>
            <div id="email_<%= email.id %>" style="display:none">
              <% form_for email do |f| %>
                <%= f.hidden_field :event, :value => "reply" %>
                <%= f.text_area :reply %>
                <%= submit_tag "Reply" %>
              <% end %>
            </div>
          </div>              
        </li>    
        <% end %>     
      </ul>
    </div>
  </div>
</div>                          
